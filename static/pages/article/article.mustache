<div class="article">
  <h1>{{article.title}}</h1>
  {{#video_id}}
    <div class="well">
      <div class="yt-double-wrap">
        <div class="youtube-wrapper">
          <iframe id="ytplayer" type="text/html" width="640" height="390"
            src="http://www.youtube.com/embed/{{video_id}}?origin=http://www.havenofcode.com"
            frameborder="0"/>
        </div>
      </div>
    </div>
  {{/video_id}}
  <div class="article-md"></div>
  <div class="comment-panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Comments</h3>
    </div>
    <div class="panel-body">
      <div class="article-comments">
        {{^user.id}}
          <div class="join-the-conversation">
            Log in with <a href="oauth_login.php">Github</a> and join the conversation
          </div>
        {{/user.id}}
      </div>
    </div>
  </div>
</div>