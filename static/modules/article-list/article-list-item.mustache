<div class="article-list-item">
  <div class="media">
    <a class="image-wrapper pull-left" href="#">
      <img
        class="media-object article-list-avatar"
        src="https://avatars.githubusercontent.com/u/{{github_id}}?s=140"
        alt="github avatar #{{github_id}}">
    </a>
    <div class="media-body">
      <a href="article.php?id={{id}}">
        <h3 class="media-heading">{{title}}</h3>
      </a>
      {{description}}
    </div>
  </div>
  <p class="bottom-text">
    By <a href="profile.php?id={{user.id}}">{{user.login}}</a> {{fromNow}}
    {{#canEdit}}
      <a href="create_article.php?article={{id}}">Edit</a>
    {{/canEdit}}
  </p>
</div>