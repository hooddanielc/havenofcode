<div class="article-editor">
  {{#editor_title}}
    <h1>{{editor_title}}</h1>
  {{/editor_title}}
  <form role="form">
    <div class="form-group">
      <label for="form-title">Article Title</label>
      <input type="email" class="form-control" id="form-title" placeholder="Enter title" value="{{title}}">
    </div>
    <div class="form-group">
      <label for="form-description">Article Description</label>
      <textarea class="form-control" placeholder="Enter description" id="form-description">{{description}}</textarea>
    </div>
    <div class="markdown-editor-container"></div>
    <div class="form-group">
      <label for="form-repo">Article github repository link</label>
      <input type="email" class="form-control" id="form-repo" placeholder="Enter repo" value="{{github_repo_link}}">
    </div>
    <div class="form-group">
      <label for="form-youtube">Article youtube video link</label>
      <input type="email" class="form-control" id="form-youtube" placeholder="Enter youtube" value="{{youtube_link}}">
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox"> Published (Makes your article public to the whole world)
      </label>
    </div>
    <button type="submit" class="btn btn-default">Save</button>
  </form>
</div>